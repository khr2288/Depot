<% if @display_count -%>
  You've viewed this page <%= pluralize(@display_count,"time") %>, mon ami.
<% end -%>

<h1><%= I18n.t 'main.title' %></h1>

<% for product in @products %>

  <div class="entry">
    <% form_remote_tag :url => { :action => 'add_to_cart', :id => product } do %>
      <%= image_submit_tag(product.image_url, :class => 'thumbnail') %>
    <% end %>

    <h3><%=h product.title %></h3>
    <%= product.description %><br/><br/>
    <div class="price-line">
      <span class="price"><%= number_to_currency(product.price, :unit => '&pound;') %></span>
      &nbsp;&nbsp;&nbsp;&nbsp;
      <% form_remote_tag :url => { :action => 'add_to_cart', :id => product } do %>
        <%= submit_tag I18n.t('main.button.add') %>
      <% end %>
    </div>
  </div>

<% end %>
